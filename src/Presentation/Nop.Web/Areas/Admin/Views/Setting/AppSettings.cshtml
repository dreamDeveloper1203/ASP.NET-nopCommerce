@model AppSettingsModel

@{
    ViewBag.PageTitle = T("Admin.Configuration.AppSettings").Text;
    Html.SetActiveMenuItemSystemName("App settings");

    const string hideCommonBlockAttributeName = "AppSettingsPage.HideCommonBlock";
    var hideCommonBlock = genericAttributeService.GetAttribute<bool>(workContext.CurrentCustomer, hideCommonBlockAttributeName);
    const string hideHostingBlockAttributeName = "AppSettingsPage.HideHostingBlock";
    var hideHostingBlock = genericAttributeService.GetAttribute<bool>(workContext.CurrentCustomer, hideHostingBlockAttributeName);
}

<form asp-controller="Setting" asp-action="AppSettings" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.AppSettings")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.AppSettingsButtons })
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            @await Component.InvokeAsync("SettingMode")
            <div asp-validation-summary="All"></div>
            <nop-panels id="app-settings-panels">
                <nop-panel asp-name="app-settings-common" asp-icon="fa fa-info" asp-title="@T("Admin.Configuration.AppSettings.Common")" asp-hide-block-attribute-name="@hideCommonBlockAttributeName" asp-hide="@hideCommonBlock" asp-advanced="false">@await Html.PartialAsync("_AppSettings.Common", Model)</nop-panel>
                <nop-panel asp-name="app-settings-hosting" asp-icon="fa fa-comments-o" asp-title="@T("Admin.Configuration.AppSettings.Hosting")" asp-hide-block-attribute-name="@hideHostingBlockAttributeName" asp-hide="@hideHostingBlock" asp-advanced="false">@await Html.PartialAsync("_AppSettings.Hosting", Model)</nop-panel>
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.AppSettingsBlock, additionalData = Model })
            </nop-panels>
        </div>
    </div>
</form>