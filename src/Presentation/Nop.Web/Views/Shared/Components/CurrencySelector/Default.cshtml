@model CurrencySelectorModel

@inject Nop.Core.IWebHelper webHelper

@if (Model.AvailableCurrencies.Count > 1)
{
    <div class="currency-selector">
        @{
            var returnUrl = webHelper.GetRawUrlAsync(Context.Request);
            var currencies = await Model.AvailableCurrencies.ToAsyncEnumerable().SelectAwait(async x => new SelectListItem
            {
                Text = x.Name,
                Value = Url.RouteUrl("ChangeCurrency", new { customercurrency = x.Id, returnUrl }, await webHelper.GetCurrentRequestProtocolAsync()),
                Selected = x.Id.Equals(Model.CurrentCurrencyId)
            }).ToListAsync();
            <select id="customerCurrency" name="customerCurrency" asp-items="@currencies" onchange="setLocation(this.value);" aria-label="@T("Currency.Selector.Label")"></select>
        }
    </div>
}